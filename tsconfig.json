{
    "extends": "tsconfig.json",
    "compilerOptions": {
        "target": "es5",
        "module": "amd",
        "moduleResolution": "classic",
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "emitDecoratorMetadata": true,
        "outDir": ".",
        "declaration": true,
        "declarationDir": "tmp",
        "sourceMap": true,
        "mapRoot": ".",
        "noImplicitAny": false,
        "removeComments": false,
        "traceResolution": false,
        "noResolve": false,
        "skipLibCheck": true,
        "noEmitOnError": false,
        "lib": [
            "es6",
            "dom"
        ],
        "baseUrl": "."
    },
    "atom": {
        "rewriteTsconfig": true
    },
    "exclude": [
        "linux_a64",
        "node_modules"
    ],
    "compileOnSave": true
}
